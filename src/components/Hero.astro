<section id="hero" class="hero">
  <h1 class="hero__title">Hola, soy <span class="accent">Daniel</span></h1>
  <p class="hero__subtitle">Desarrollador front-end — experiencias rápidas y animadas.</p>
  <a href="#proyectos" class="hero__cta">Ver proyectos</a>
</section>

<script type="module">
  import { gsap } from "gsap";
  const run = () => {
    const tl = gsap.timeline();
    tl.from(".hero__title", { y: 40, opacity: 0, duration: 0.7, ease: "power3.out" })
      .from(".hero__subtitle", { y: 20, opacity: 0, duration: 0.6 }, "-=0.35")
      .from(".hero__cta", { y: 10, opacity: 0, duration: 0.5 }, "-=0.35");
  };
  if (document.readyState === "loading") document.addEventListener("DOMContentLoaded", run, { once: true });
  else run();
</script>

<style>
  .hero { max-width: 64rem; margin: 5rem auto; padding: 0 1.5rem; text-align: center; }
  .hero__title { font-size: clamp(2.25rem, 6vw, 3.5rem); font-weight: 800; }
  .hero__subtitle { margin-top: .75rem; font-size: 1.125rem; opacity: .9; }
  .hero__cta { display: inline-block; margin-top: 1.5rem; padding: .75rem 1.25rem; border-radius: .75rem; font-weight: 700; background: #4f46e5; color: white; text-decoration: none; }
  .accent { color: #4f46e5; }
</style>
